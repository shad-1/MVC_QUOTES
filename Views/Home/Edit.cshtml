@{
    ViewData["Title"] = Model != null ? "Edit" : "Add";
}
@model Quotation

<div class="my-4">
    <h3>@(Model != null ? "Edit" : "Add a") Quote</h3>
</div>

<form method="post">
    @if (Model != null)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div class="form-group">
        <label asp-for="Quote">Quote Text</label>
        <textarea class="form-control" asp-for="Quote">
        @Model.Quote
        </textarea>
    </div>

    <div class="form-group">
        <label asp-for="Author">Author</label>
        <input class="form-control" asp-for="Author" />
    </div>

    <div class="form-group">
        <label asp-for="Date">Date</label>
        <input type='text' class="form-control" asp-for="Date" />
    </div>

    <div class="form-group">
        <label asp-for="Subject">Subject</label>
        <input class="form-control" asp-for="Subject" />
    </div>

    <div class="form-group">
        <label asp-for="Citation">Citation</label>
        <input class="form-control" asp-for="Citation" />
    </div>

    <div class="d-flex justify-content-between my-4">
        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
        <button type="submit" class="btn btn-outline-primary">Save</button>
    </div>
</form>

<div class="mt-4 text-danger" asp-validation-summary="All"></div>