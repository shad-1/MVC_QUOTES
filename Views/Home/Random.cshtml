@{
    ViewData["Title"] = "Split-Second Inspiration";
}
@model Quotation

<div class="my-4">
    <h3>And I Quote...</h3>
</div>

<div class="my-4 p-relative card p-4">

    <div class="d-flex justify-content-between my-2">
        <div class="">
            <div class="f-1_half">"@Model.Quote"</div>
            <div>&mdash;<em>@Model.Author</em></div>
        </div>
        <div class="d-flex flex-column justify-content-end">
            <a class="btn btn-outline-info" asp-controller="Home" asp-action="Details" asp-route-id="@Model.Id">
                Details
            </a>
        </div>

    </div>

</div>
